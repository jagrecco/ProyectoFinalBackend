<table class="table table-striped mt-4">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">Producto</th>
            <th scope="col" class="text-center">Precio</th>
            <th scope="col" class="text-center">Img</th>
            <th scope="col" class="text-center"><div></div></th>
        </tr>
    </thead class="thead-dark">
        <tr>
            <th>
                <div class="dropdown" style="z-index: 200">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                      Categoria <strong><%=cat%></strong>
                    </button>
                    <div class="dropdown-menu">
                        <a class="dropdown-item" href="/api/productos/Todos">Todos los art√≠culos</a>
                        <% for (let j = 0; j < categorias.length; j++) { %>
                            <a class="dropdown-item" href="/api/productos/<%=categorias[j].category%>"><%=categorias[j].category%></a>
                        <% } %>
                    </div>
                  </div>
            </th>
            <th scope="col"> </th>
            <th scope="col"> </th>
            <th scope="col"> </th>
        </tr>
    <thead>

    </thead>
    <tbody id="cuerpoTabla">
        <% if (productos.length === 0) { %>
            <tr>
                <td colspan="3">No hay datos</td>
            </tr>
        <% }else{ %>
        
        <% for (let i = 0; i < productos.length; i++) { %>
            
            <tr class="">
                
                <td><blockquote class="blockquote">
                    <p class="mb-0"><%=productos[i].title%></p>
                    <footer class="blockquote-footer"><%=productos[i].description%></footer>
                  </blockquote>
                </td>
                
                <td><span>$<%=productos[i].price%></span></td>                    
                <td class="imagen"><img src=<%=productos[i].thumbnail%>></img></td>
                <td><div>
                  <button class="btn btn-dark btn-prods" value="<%=usrID%>" id="abrirModal" onclick="abrirModal(`<%=productos[i]._id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                  <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                  </svg>
                </button>
                <button class="btn btn-dark btn-prods" value="<%=usrID%>" id="abrirModal" onclick="abrirModal(`<%=productos[i]._id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                  <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                </svg>
                </button>
                <button class="btn btn-dark btn-prods" value="<%=usrID%>" id="abrirModal" onclick="abrirModal(`<%=productos[i]._id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                  <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                  <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                </svg>
                </button>
                </div>
                </td>
            </tr>
            
            
        <% } } %>
    </tbody>
</table>


