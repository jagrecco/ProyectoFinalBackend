<table class="table table-striped mt-8">
    <thead class="thead-dark">
        <tr>
            <th scope="col" class="text-center">Producto</th>
            <th scope="col" class="text-center">Precio</th>
            <th scope="col" class="text-center">Img</th>
            <th scope="col" class="text-center"><div></div></th>
        </tr>
    </thead>
        <tr>
            <th>
                <div class="dropdown" style="z-index: 200">
                    <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-expanded="false">
                      Categoria <strong><%=cat%></strong>
                    </button>
                    <div class="dropdown-menu listadoCategorias">
                        <a class="dropdown-item" href="/api/productos/Todos">Todos los artículos</a>
                        <% for (let j = 0; j < categorias.length; j++) { %>
                            <a class="dropdown-item" href="/api/productos/<%=categorias[j].category%>"><%=categorias[j].category%></a>
                        <% } %>
                    </div>
                    <button class="btn btn-secondary" type="button" onclick="newProductDisplay()">Nuevo Producto</button>
                  </div>
            </th>
            <th>
              
            </th>
            
            <th scope="col"> </th>
            <th scope="col"> </th>
        </tr>
        <tr class="newProduct">
          <div class="">
            <%- include('newProduct.ejs'); %>
          </div>
        </tr>
    <!-- <thead>

    </thead> -->
    <tbody id="cuerpoTabla" class="tablaProductos">
        <% if (productos.length === 0) { %>
            <tr>
                <td colspan="3">No hay datos</td>
            </tr>
        <% }else{ %>
        
        <% for (let i = 0; i < productos.length; i++) { %>
            
            <tr class="">
                
                <td>
                  <blockquote class="blockquote">
                    <p class="mb-0"><%=productos[i].title%></p>
                    <footer class="blockquote-footer"><%=productos[i].description%></footer>
                  </blockquote>
                </td>
                
                <td>
                  <span>$<%=productos[i].price%></span>
                </td>
                
                <td>
                  <img class="imagen" src=<%=productos[i].thumbnail%>></img>
                </td>

                <td>  
                    <button class="btn btn-dark btn-prods" value="<%=usrID%>" id="abrirModal" onclick="abrirModal(`<%=productos[i].id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-cart2" viewBox="0 0 16 16">
                      <path d="M0 2.5A.5.5 0 0 1 .5 2H2a.5.5 0 0 1 .485.379L2.89 4H14.5a.5.5 0 0 1 .485.621l-1.5 6A.5.5 0 0 1 13 11H4a.5.5 0 0 1-.485-.379L1.61 3H.5a.5.5 0 0 1-.5-.5zM3.14 5l1.25 5h8.22l1.25-5H3.14zM5 13a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0zm9-1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm-2 1a2 2 0 1 1 4 0 2 2 0 0 1-4 0z"/>
                      </svg>
                    </button>

                    <button class="btn btn-dark btn-prods btnProdsEdit" value="<%=usrID%>" id="editProduct" onclick="editProductDisplay(`<%=productos[i].id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                      <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                    </svg>
                    </button>

                    <button class="btn btn-dark btn-prods" value="<%=usrID%>" id="deleteProduct" onclick="deleteProduct(`<%=productos[i].id%>`)"><svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                      <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                      <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                    </svg>
                    </button>
                  
                </td>
            </tr>
            <tr>
              <td colspan="4" class="">
                <!-- DETALLE DEL PRODUCTO PARA EDITAR -->
                <div id='detalleProd<%=productos[i].id%>' class='detalleProd animate__animated animate__backInUp' style="display:none">

                  <form class="detalleProdForm" action='api/producto/<%=productos[i].id%>' enctype="multipart/form-data">
                    
                    <div class="form-group">
                      <label class="blockquote-footer" for="title">Nombre</label>
                      <input id='updateTitle<%=productos[i].id%>' type="texto" name="title" placeholder="Title" class="form-control" value='<%=productos[i].title%>'>

                      <label class="blockquote-footer" for="description">Descripción</label>
                      <textarea  id='updateDescription<%=productos[i].id%>' name="description" id="" cols="80" rows="3" placeholder="Descripción" class="form-control">'<%=productos[i].description%>'</textarea>

                      <label class="blockquote-footer" for="price">Precio sin descuento</label>
                      <input  id='updatePricePure<%=productos[i].id%>' type="texto" name="price" placeholder="Precio" class="form-control" value='<%=productos[i].pricePure%>'>

                      <label class="blockquote-footer" for="discount">Descuento %</label>
                      <input  id='updateDiscountPercentage<%=productos[i].id%>' type="texto" name="discount" placeholder="Discount" class="form-control" value='<%=productos[i].discountPercentage%>'>

                      <label class="blockquote-footer" for="discount">Rating</label>
                      <input  id='updateRating<%=productos[i].id%>' type="texto" name="rating" placeholder="Rating" class="form-control" value='<%=productos[i].rating%>'>

                      <label class="blockquote-footer" for="discount">Stock</label>
                      <input  id='updateStock<%=productos[i].id%>' type="texto" name="stock" placeholder="Stock" class="form-control" value='<%=productos[i].stock%>'>

                      <label class="blockquote-footer" for="discount">Brand</label>
                      <input  id='updateBrand<%=productos[i].id%>' type="texto" name="brand" placeholder="Brand" class="form-control" value='<%=productos[i].brand%>'>

                      <label class="blockquote-footer" for="discount">Categoria</label>
                      <input  id='updateCategory<%=productos[i].id%>' type="texto" name="category" placeholder="Categoria" class="form-control" value='<%=productos[i].category%>'>

                      <label class="blockquote-footer" for="imagen">Imagen</label>
                      <input  id='updateThumbnail<%=productos[i].id%>' type="url" name="imagen" placeholder="Imágen" class="form-control" value='<%=productos[i].thumbnail%>'>
                    </div>
                  </form>

                  <button class="btn btn-dark" value=`<%=usrID%>` id="updateProduct" onclick="updateProduct(`<%=productos[i].id%>`)" mt-4"> <!-- Actualizar datos  btn-block-->
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-cloud-upload" viewBox="0 0 16 16"> <path fill-rule="evenodd" d="M4.406 1.342A5.53 5.53 0 0 1 8 0c2.69 0 4.923 2 5.166 4.579C14.758 4.804 16 6.137 16 7.773 16 9.569 14.502 11 12.687 11H10a.5.5 0 0 1 0-1h2.688C13.979 10 15 8.988 15 7.773c0-1.216-1.02-2.228-2.313-2.228h-.5v-.5C12.188 2.825 10.328 1 8 1a4.53 4.53 0 0 0-2.941 1.1c-.757.652-1.153 1.438-1.153 2.055v.448l-.445.049C2.064 4.805 1 5.952 1 7.318 1 8.785 2.23 10 3.781 10H6a.5.5 0 0 1 0 1H3.781C1.708 11 0 9.366 0 7.318c0-1.763 1.266-3.223 2.942-3.593.143-.863.698-1.723 1.464-2.383z"/> <path fill-rule="evenodd" d="M7.646 4.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1-.708.708L8.5 5.707V14.5a.5.5 0 0 1-1 0V5.707L5.354 7.854a.5.5 0 1 1-.708-.708l3-3z"/></svg>
                 </button>

                </div>
              </td>
            </tr>
            
        <% } } %>
    </tbody>
</table>